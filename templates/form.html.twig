<div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="modal" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modal">Add a run</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="{{ path('user_profile', { 'id': id }) }}" method="post">
                    <div class="row">
                        <div class="col-12 form-group my-sandbox">
                            {{ form_row(form.date, { attr: { 'class': 'form-control', 'placeholder': 'yyyy-mm-dd' } }) }}
                        </div>
                        <div class="col-12 form-group">
                            {{ form_row(form.distance, { attr: { 'class': 'form-control', 'placeholder': 'Distance in km' } }) }}
                        </div>
                        <div class="col-12 form-group">
                            {{ form_row(form.time.hour, { attr: { 'class': 'form-control', 'placeholder': 'Max 23 hours' } }) }}
                        </div>
                        <div class="col-12 form-group">
                            {{ form_row(form.time.minute, { attr: { 'class': 'form-control' } }) }}
                        </div>
                        <div class="col-12 form-group">
                            {{ form_row(form.time.second, { attr: { 'class': 'form-control' } }) }}
                        </div>
                        <div class="col-lg-2 pt-3">
                            {{ form_row(form.save) }}
                        </div>
                    </div>
                </form>
            </div>
        </div>
      </div>
</div>
