<div class="my-table-wrapper">

    <table class="table table-striped table-dark my-table">
        <thead>
            <tr>
                <th style="padding-right: 0;">Date</th>
                <th>Distance</th>
                <th>Time</th>
                <th>Speed</th>
                {% if runs|length > 0 %}
                    {% if is_granted('delete', runs[0]) %}
                        <th>Delete</th>
                    {% endif %}
                {% endif %}
            </tr>
        </thead>
        <tbody>
            {% for run in runs %}
                <tr id="{{ run.id }}">
                    <th scope="row">
                        {{ run.getFormatedDate }}
                    </th>
                    <td>
                        {{ run.distance }} km
                    </td>
                    <td>
                        {{ run.getFormatedTime }} h
                    </td>
                    <td>
                        {{ run.speed }} km/h
                    </td>
                    {% if is_granted('delete', run) %}
                        <td>
                            <a class="btn btn-danger my-btn-remove" href="{{ path('delete_run', { id: run.id }) }}">x</a>
                        </td>
                    {% endif %}
                </tr>
            {% endfor %}
        </tbody>
    </table>

</div>
