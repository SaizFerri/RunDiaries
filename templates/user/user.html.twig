{% extends 'base.html.twig' %}
{% block title %}Profile - {{ username }}{% endblock %}
{% block body %}
    <div class="row align-items-center profile-header">
        <div class="col-lg-2">
            <img class="rounded-circle" src="http://via.placeholder.com/140x140" alt="profile-pic">
        </div>
        <div class="col-lg-9">
            <h3>{{ username }}</h3>
        </div>
    </div>

    <div class="row no-gutters profile-overview">
        <div class="col-lg-4">
            <!-- Anzahl der Lauftage -->
            <span>Lauftage: </span>{{ totalDays }}
        </div>
        <div class="col-lg-4">
            <!-- Gesamttage seit dem ersten Lauftag (bis heute, nicht bis zum letzten hinterlegten Lauftag) -->
            <span>Gesamttage: </span>
        </div>
        <div class="col-lg-4">
            <!-- Gesamte bisher gelaufene Strecke -->
            <span>Gesamtstrecke: </span>{{ totalKm }} km
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            {% include 'user/runs.html.twig' %}
        </div>
    </div>
{% endblock %}
